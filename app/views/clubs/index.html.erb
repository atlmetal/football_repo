<h1>Listing clubs</h1>
<table id='clubsTable' class='table table-striped table-sm'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Foundation date</th>
      <th>Federation</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td>
          <%= club.name %>
        </td>
        <td>
          <%= club.foundation_date %>
        </td>
        <td>
          <%= club.federation.name %>
        </td>
        <td>
          <%= link_to 'Show', club %>
        </td>
        <td>
          <%= link_to 'Edit', edit_club_path(club) %>
        </td>
        <td>
          <%= link_to 'Destroy', club, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function() {
    var oTable = $("#clubsTable").DataTable({})
  });
</script>